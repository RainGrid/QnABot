  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["src/types/*", "node_modules/*"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "resolveJsonModule": true
